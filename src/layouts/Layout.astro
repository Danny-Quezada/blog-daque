---
import { ViewTransitions } from 'astro:transitions';
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" translate="no">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="shortcut icon"
      href="../../public/favicon.ico"
      type="image/x-icon"
    />
    <link rel="apple-touch-icon" href="../../public/apple-touch-icon.png" />
    <link
      href="https://fonts.googleapis.com/css2?family=Onest:wght@100;400;600;800;900&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
   
  </head>
  <body>
    <slot />
  </body>
  
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Onest:wght@100;400;600;800;900&display=swap");
  :root {
    --primary-color: aqua;
    --secondary-color: #b4b4b8;
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  * {
    color: black;
    color-scheme: dark light;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    list-style-type: none;
    text-decoration: none;
  }
  html {
    list-style-type: none;
    text-decoration: none;
    font-family: "Onest",system-ui, sans-serif;
  }
  code {
    font-family:
      "Onest" Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
  .katex-html{
  display: none;
}
  @media (prefers-color-scheme: dark) {
    body {
      background-color: black;
    }
    * {
      color: white;
    }
  }
</style>
